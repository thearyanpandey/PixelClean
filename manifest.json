{
    "manifest_version" : 3, 
    "name" : "PixelClean",
    "version": "1.0",
    "description": "Finds and helps remove exact duplicate photos in Google Photos.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icons_photos.png",
    "128": "icons/icon_google.png"
        }
    },
    "content_scripts" : [
        {
            "matches" : ["https://photos.google.com/*"],
            "js": ["blockhash.js", "content.js"],
            "css" : ["styles.css"]
        }
    ],
    "icons": {
    "16": "icons/icons_photos.png",
    "128": "icons/icon_google.png"
  },
  "host_permissions": [
    "https://*.googleusercontent.com/*",
    "https://photos.google.com/*"
  ],
}