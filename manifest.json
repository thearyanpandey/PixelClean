{
    "manifest_version" : 3, 
    "name" : "PixelClean",
    "version": "1.0",
    "description": "Finds and helps remove exact duplicate photos in Google Photos.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16" : "icons/icons16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts" : [
        {
            "matches" : ["https://photos.google.com/*"],
            "js": ["blockhash.js", "content.js"],
            "css" : ["styles.css"]
        }
    ],
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}